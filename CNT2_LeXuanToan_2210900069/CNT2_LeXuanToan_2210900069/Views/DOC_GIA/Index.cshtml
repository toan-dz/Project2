@model IEnumerable<CNT2_LeXuanToan_2210900069.Models.DOC_GIA>

@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/docgia.css" />
</head>

<h2>Quản lý Độc Giả</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn" })
</p>
<table class="table">
