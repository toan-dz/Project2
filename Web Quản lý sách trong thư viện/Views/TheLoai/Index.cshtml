@model IEnumerable<Quản_Lý_Sách.Models.TheLoai>

@{
    ViewBag.Title = "Danh sách thể loại";
}

<h2>Danh sách thể loại</h2>

<p>
    @Html.ActionLink("Thêm mới thể loại", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaTheLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenTheLoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTheLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTheLoai)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTheLoai }) |
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTheLoai }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTheLoai })
            </td>
        </tr>
    }
</table>
