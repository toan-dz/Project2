@model Quản_Lý_Sách.Models.TheLoai

@{
    ViewBag.Title = "Xóa thể loại";
}

<h2>Xóa thể loại</h2>

<div>
    <h4>TheLoai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenTheLoai)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenTheLoai)
        </dd>
    </dl>
</div>

<h4>Bạn có chắc chắn muốn xóa thể loại này?</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.MaTheLoai" />
    <input type="submit" value="Xóa" class="btn btn-danger" />
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
}
