@model IEnumerable<CNT2_LeXuanToan_2210900069.Models.SACH>

@{
    ViewBag.Title = "Quản Lý Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/quantri.css" />
</head>

<h2>Quản Lý Sách</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn" })
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.TenSach)</th>
        <th>@Html.DisplayNameFor(model => model.TacGia)</th>
        <th>@Html.DisplayNameFor(model => model.NamXuatBan)</th>
        <th>@Html.DisplayNameFor(model => model.NhaXuatBan)</th>
        <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
        <th>@Html.DisplayNameFor(model => model.Gia)</th>
        <th>@Html.DisplayNameFor(model => model.THE_LOAI.TenTheLoai)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TenSach)</td>
            <td>@Html.DisplayFor(modelItem => item.TacGia)</td>
            <td>@Html.DisplayFor(modelItem => item.NamXuatBan)</td>
            <td>@Html.DisplayFor(modelItem => item.NhaXuatBan)</td>
            <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
            <td>@Html.DisplayFor(modelItem => item.Gia)</td>
            <td>@Html.DisplayFor(modelItem => item.THE_LOAI.TenTheLoai)</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSach }, new { @class = "btn-edit" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSach }, new { @class = "btn-details" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSach }, new { @class = "btn-delete" })
            </td>
        </tr>
    }
</table>
