            <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaDocGia }, new { @class = "btn-edit" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDocGia }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaDocGia }, new { @class = "btn-delete" })
